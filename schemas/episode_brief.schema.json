{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "episode_brief.schema.json",
  "title": "EpisodeBrief",
  "type": "object",
  "additionalProperties": false,
  "required": ["premise", "beats", "tone", "cast_constraints"],
  "properties": {
    "premise": {
      "type": "string",
      "minLength": 1
    },
    "beats": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "duration_sec"],
        "properties": {
          "label": {"type": "string", "minLength": 1},
          "duration_sec": {"type": "number", "minimum": 1}
        }
      }
    },
    "tone": {
      "type": "string",
      "minLength": 1
    },
    "cast_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["required_characters", "max_cast_per_scene", "max_scenes"],
      "properties": {
        "required_characters": {
          "type": "array",
          "items": {"type": "string", "minLength": 1}
        },
        "max_cast_per_scene": {"type": "integer", "minimum": 1},
        "max_scenes": {"type": "integer", "minimum": 1}
      }
    }
  }
}
