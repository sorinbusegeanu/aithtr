{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "screenplay.schema.json",
  "title": "Screenplay",
  "type": "object",
  "additionalProperties": false,
  "required": ["scenes"],
  "properties": {
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scene_id", "setting_prompt", "characters", "lines"],
        "properties": {
          "scene_id": {"type": "string", "minLength": 1},
          "setting_prompt": {"type": "string", "minLength": 1},
          "characters": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string", "minLength": 1}
          },
          "lines": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["line_id", "speaker", "text", "emotion", "pause_ms_after"],
              "properties": {
                "line_id": {"type": "string", "minLength": 1},
                "speaker": {"type": "string", "minLength": 1},
                "text": {"type": "string", "minLength": 1},
                "emotion": {"type": "string", "minLength": 1},
                "pause_ms_after": {"type": "integer", "minimum": 0},
                "sfx_tag": {"type": "string", "minLength": 1}
              }
            }
          }
        }
      }
    }
  }
}
