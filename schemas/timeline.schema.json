{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "timeline.schema.json",
  "title": "Timeline",
  "type": "object",
  "additionalProperties": false,
  "required": ["scenes", "duration_sec"],
  "properties": {
    "duration_sec": {"type": "number", "minimum": 1},
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scene_id", "start_sec", "end_sec", "layers", "audio"],
        "properties": {
          "scene_id": {"type": "string", "minLength": 1},
          "start_sec": {"type": "number", "minimum": 0},
          "end_sec": {"type": "number", "minimum": 0},
          "layers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "asset_id", "start_sec", "end_sec", "z"],
              "properties": {
                "type": {"type": "string", "enum": ["background", "actor", "props", "caption"]},
                "asset_id": {"type": "string", "minLength": 1},
                "start_sec": {"type": "number", "minimum": 0},
                "end_sec": {"type": "number", "minimum": 0},
                "z": {"type": "integer"},
                "position": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["x", "y"],
                  "properties": {
                    "x": {"type": "number", "minimum": 0, "maximum": 1},
                    "y": {"type": "number", "minimum": 0, "maximum": 1}
                  }
                },
                "scale": {"type": "number", "minimum": 0.1, "maximum": 3.0}
              }
            }
          },
          "audio": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "asset_id", "start_sec", "end_sec"],
              "properties": {
                "type": {"type": "string", "enum": ["dialogue", "sfx", "music"]},
                "asset_id": {"type": "string", "minLength": 1},
                "start_sec": {"type": "number", "minimum": 0},
                "end_sec": {"type": "number", "minimum": 0},
                "gain_db": {"type": "number", "minimum": -60, "maximum": 24}
              }
            }
          }
        }
      }
    }
  }
}
